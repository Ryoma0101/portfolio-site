<Layout
  title={`${basics.name}'s Portfolio`}
  description={basics.summary}
  theme={basics.theme}
>
  <main class="relative mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
    <!-- Hero Section -->
    <section class="mb-16">
      <div
        class="flex flex-col-reverse gap-8 md:flex-row md:items-start md:justify-between"
      >
        <div class="flex-1 space-y-4">
          <h1
            class="text-4xl font-bold tracking-tight text-skin-base sm:text-5xl md:text-6xl"
          >
            {basics.name}
          </h1>
          <div class="flex items-center gap-2 text-lg text-skin-muted">
            <Icon name="mdi:world" class="h-5 w-5" />
            <span>{basics.location.address}, {basics.location.region}</span>
          </div>
          <p class="max-w-2xl text-lg text-skin-muted">
            {basics.summary}
          </p>
          <div class="flex gap-3 pt-4">
            <a
              href={`mailto:${basics.email}`}
              class="inline-flex h-10 items-center justify-center rounded-md bg-skin-button-accent px-4 py-2 text-sm font-medium text-skin-inverted transition-colors hover:bg-skin-button-accent/90"
            >
              <Icon name="mdi:email" class="mr-2 h-4 w-4" />
              Contact
            </a>
            {
              basics.profiles.map((profile) => (
                <a
                  href={profile.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex h-10 items-center justify-center rounded-md border border-skin-hue/20 bg-transparent px-4 py-2 text-sm font-medium text-skin-hue transition-colors hover:bg-skin-button-muted"
                >
                  <Icon name={profile.icon} class="mr-2 h-4 w-4" />
                  {profile.network}
                </a>
              ))
            }
          </div>
        </div>
        <div class="relative">
          <Image
            src={basics.image}
            alt={basics.name}
            width={200}
            height={200}
            class="rounded-2xl shadow-lg"
          />
          <div class="pointer-events-none absolute -inset-2">
            <div
              class="absolute -inset-y-8 right-0 w-px bg-skin-hue/50 [mask-image:linear-gradient(to_top,transparent,white_4rem,white_calc(100%-4rem),transparent)]"
            >
            </div>
            <div
              class="absolute -inset-y-8 left-0 w-px bg-skin-hue/50 [mask-image:linear-gradient(to_top,transparent,white_4rem,white_calc(100%-4rem),transparent)]"
            >
            </div>
            <div
              class="absolute -inset-x-8 bottom-0 h-px bg-skin-hue/50 [mask-image:linear-gradient(to_left,transparent,white_4rem,white_calc(100%-4rem),transparent)]"
            >
            </div>
            <div
              class="absolute -inset-x-8 top-0 h-px bg-skin-hue/50 [mask-image:linear-gradient(to_left,transparent,white_4rem,white_calc(100%-4rem),transparent)]"
            >
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Work Experience Section -->
    <section class="mb-16">
      <h2 class="mb-6 text-3xl font-bold tracking-tight text-skin-base">
        Work Experience
      </h2>
      <div class="space-y-6">
        {
          work.map((job) => (
            <Card
              className="border-skin-hue/20 bg-skin-button-muted/50"
              client:load
            >
              <CardHeader>
                <div class="flex items-start justify-between">
                  <div class="space-y-1">
                    <CardTitle className="text-skin-base">
                      <a
                        href={job.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="transition-colors hover:text-skin-hue"
                      >
                        {job.name}
                      </a>
                    </CardTitle>
                    <CardDescription className="text-skin-muted">
                      {job.position}
                    </CardDescription>
                  </div>
                  <span class="text-sm text-skin-muted">
                    {job.startDate} - {job.endDate || "Present"}
                  </span>
                </div>
              </CardHeader>
              <CardContent>
                <p class="mb-4 text-sm text-skin-muted">{job.summary}</p>
                {job.highlights.length > 0 && (
                  <div class="mb-4">
                    <h4 class="mb-2 text-sm font-semibold text-skin-base">
                      Highlights:
                    </h4>
                    <ul class="ml-4 list-disc space-y-1 text-sm text-skin-muted">
                      {job.highlights.map((highlight) => (
                        <li>{highlight}</li>
                      ))}
                    </ul>
                  </div>
                )}
                <div class="flex flex-wrap gap-2">
                  {Object.entries(job.skills).map(([skill, icon]) => (
                    <Badge
                      variant="secondary"
                      className="border-skin-hue/20 bg-skin-button-accent/20 text-skin-hue"
                      client:load
                    >
                      <Icon name={icon as string} class="mr-1 h-3 w-3" />
                      {skill}
                    </Badge>
                  ))}
                </div>
              </CardContent>
            </Card>
          ))
        }
      </div>
    </section>

    <!-- Affiliation Section -->
    <section class="mb-16">
      <h2 class="mb-6 text-3xl font-bold tracking-tight text-skin-base">
        Affiliation
      </h2>
      <div class="grid gap-6 md:grid-cols-2">
        {
          affiliation.map((org) => (
            <Card
              className="border-skin-hue/20 bg-skin-button-muted/50"
              client:load
            >
              <CardHeader>
                <div class="space-y-1">
                  <CardTitle className="text-skin-base">
                    <a
                      href={org.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="transition-colors hover:text-skin-hue"
                    >
                      {org.name}
                    </a>
                  </CardTitle>
                  <CardDescription className="text-skin-muted">
                    {org.position}
                  </CardDescription>
                  {org.location && (
                    <p class="flex items-center gap-1 text-xs text-skin-muted">
                      <Icon name="mdi:map-marker" class="h-3 w-3" />
                      {org.location}
                    </p>
                  )}
                </div>
              </CardHeader>
              <CardContent>
                {org.achievements.length > 0 && (
                  <div class="mb-4">
                    <h4 class="mb-2 text-sm font-semibold text-skin-base">
                      Achievements:
                    </h4>
                    <ul class="ml-4 list-disc space-y-1 text-sm text-skin-muted">
                      {org.achievements.map((achievement) => (
                        <li>{achievement}</li>
                      ))}
                    </ul>
                  </div>
                )}
                <div class="flex flex-wrap gap-2">
                  {Object.entries(org.skills).map(([skill, icon]) => (
                    <Badge
                      variant="outline"
                      className="text-xs border-skin-hue/20 text-skin-muted"
                      client:load
                    >
                      <Icon name={icon as string} class="mr-1 h-3 w-3" />
                      {skill}
                    </Badge>
                  ))}
                </div>
              </CardContent>
            </Card>
          ))
        }
      </div>
    </section>

    <!-- Projects Section -->
    <section class="mb-16">
      <h2 class="mb-6 text-3xl font-bold tracking-tight text-skin-base">
        Pick Up Projects
      </h2>
      <div class="grid gap-6 md:grid-cols-2">
        {
          projects.map((project) => (
            <Card
              className="border-skin-hue/20 bg-skin-button-muted/50 overflow-hidden"
              client:load
            >
              <CardHeader>
                <div class="flex items-start justify-between">
                  <CardTitle className="text-skin-base">
                    {project.isActive ? (
                      <a
                        href={project.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center gap-2 transition-colors hover:text-skin-hue"
                      >
                        <Icon name="mdi:folder-outline" class="h-5 w-5" />
                        {project.name}
                        <Icon
                          name="ri:arrow-up-line"
                          class="h-4 w-4 rotate-45"
                        />
                      </a>
                    ) : (
                      <span class="flex items-center gap-2">
                        <Icon name="mdi:folder-outline" class="h-5 w-5" />
                        {project.name}
                      </span>
                    )}
                  </CardTitle>
                </div>
              </CardHeader>
              <CardContent>
                <p class="mb-3 text-sm text-skin-muted">
                  {project.description}
                </p>
                {project.highlights.length > 0 && (
                  <ul class="mb-4 ml-4 list-disc space-y-1 text-sm text-skin-muted">
                    {project.highlights.map((highlight) => (
                      <li>{highlight}</li>
                    ))}
                  </ul>
                )}
                {project.image && project.image.position === "container" && (
                  <a
                    href={project.url}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <Image
                      src={project.image.url}
                      alt={project.name}
                      width={800}
                      height={450}
                      class="rounded-lg transition-transform hover:scale-105"
                    />
                  </a>
                )}
              </CardContent>
            </Card>
          ))
        }
      </div>
      <div class="mt-8 flex justify-center">
        <a
          href="/blog"
          class="group inline-flex items-center gap-2 rounded-md bg-skin-button-muted/50 px-6 py-3 text-sm font-medium text-skin-base transition-colors hover:bg-skin-button-muted"
        >
          Read More
